@model Listing

<form class="form-group d-flex justify-content-between m-5" asp-controller="Listings" asp-action="Create" method="post">
    <div class="d-flex flex-column justify-content-between mx-2 ">
    <h1 class="text-center">Create New Listing</h1>
    <hr>
        <label asp-for="Title">Title</label>
        <input asp-for="Title">
        <span asp-validation-for="Title" class="text-danger"></span>
        <br>
        <label asp-for="Description">Description</label>
        <input asp-for="Description">
        <span asp-validation-for="Description" class="text-danger"></span>
        <br>
        <label asp-for="Price">Price</label>
        <input asp-for="Price">
        <span asp-validation-for="Price" class="text-danger"></span>
        <button class="btn btn-secondary mt-3" type="submit">Submit Listing</button>
    </div>
</form>