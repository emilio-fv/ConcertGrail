@* === Login Form === *@
@model LoginUser

<form class="form-group d-flex justify-content-between m-5" asp-action="Login" asp-controller="Users" method="post">
    <div class="d-flex flex-column justify-content-between mx-2 ">
    <h1 class="text-center">Login</h1>
    <hr>
        <label asp-for="LoginEmail"></label>
        <input asp-for="LoginEmail">
        <span asp-validation-for="LoginEmail" class="text-danger"></span>
        <br>
        <label asp-for="LoginPassword"></label>
        <input asp-for="LoginPassword">
        <span asp-validation-for="LoginPassword" class="text-danger"></span>
        <button class="btn btn-secondary mt-3" type="submit">Login</button>
    </div>
</form>