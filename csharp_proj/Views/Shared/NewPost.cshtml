@model Post

<form class="form-group d-flex justify-content-between m-5" asp-controller="Posts" asp-action="Create" method="post">
    <div class="d-flex flex-column justify-content-between mx-2 ">
    <h1 class="text-center">Create New Post</h1>
    <hr>
        <label asp-for="Subject">Subject</label>
        <input asp-for="Subject">
        <span class="text-danger" asp-validation-for="Subject"></span>
        <br>
        <label asp-for="Message">Message</label>
        <input asp-for="Message">
        <span class="text-danger" asp-validation-for="Message"></span>
        <br>
        <button class="btn btn-secondary mt-3" type="submit">Submit Listing</button>
    </div>
</form>